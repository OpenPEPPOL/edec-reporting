{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$ref": "#/definitions/document",
    "definitions": {
        "document": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "metadata": {
                    "$ref": "#/definitions/metadata"
                },
                "content": {
                    "$ref": "syntax-binding-content.json"
                }
            }
        },
        "metadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "namespaces": {
                    "$ref": "#/definitions/namespace"
                }
            }
        },
        "namespace": {
            "type": "object",
            "patternProperties": {
                "^[a-z0-9]+$": {
                    "type": "string"
                }
            }
        },
        "string_translatable": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "patternProperties": {
                        "^.+$": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    }
}